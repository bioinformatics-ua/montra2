<div class="col-md-12 col-sm-12 col-lg-12">
    <h3>Questionnaires</h3>
</div>

<!-- List -->
<div class="container-fluid">
    <div id="pf-list-standard" class="list-group list-view-pf" style="box-shadow: none">
        {{#each questionnaires}}
        <div class="list-group-item " style="
             border-width: thin;
            border-color: lightgrey;">
            <div class="list-view-pf-main-info">
                <div class="list-view-pf-left">
                    {{#if logo.length}}
                        <img src="{{logo}}" style="min-width:10em;width:10em;">
                    {{else}}
                        <img src="/static/upload_images/nopic.gif" style="min-width:10em;width:10em;">
                    {{/if}}
                </div>
                <div class="list-view-pf-body">
                    <div class="list-view-pf-description" style="width: 70%">
                        <div class="list-group-item-heading">
                            <center>
                                <a href="c/{{../community}}/q/{{slug}}">
                                    <h4 class="title-overflow">
                                        {{name}}
                                    </h4>
                                </a>
                            </center>
                        </div>
                        <!-- Section 0 -->
                        <div class="list-group-item-text">
                            <div class="opentext-list">
                                {{#if long_description.length}}
                                    {{long_description}}
                                {{else}}
                                    There is no description for this questionnaire.
                                {{/if}}
                            </div>
                        </div>
                    </div>

                    <!-- Section 1-->
                    <div class="list-view-pf-additional-info" style="width: 30%">
                        <div class="list-view-pf-additional-info-item" style="width: 100%;">
                            <div class="col-xs-6 col-sm-6">
                                <div class="text-center" style="padding-top: 1em">
                                    <h5><i class="fas fa-fw fa-list" style="font-size:1.5em;"></i></h5>
                                    <h5>{{fingerprints_count}}</h5>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6">
                                <div class="text-center" style="padding-top: 1em">
                                    <h5><i class="fas fa-fw fa-question" style="font-size:1.5em;"></i></h5>
                                    <h5>{{questions_count}}</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>